<div>

    <h1>Sign Up</h1>

    <%= form_with model: @user do |form| %>
    
        <div class='user_sign_up_form'>
        
            <div>
                <%= form.label :name, :class => 'user_sign_up_label' %>
                <%= form.text_field :name, :class => 'user_sign_up_field' %>
                <b><div class = 'sign_up_error' ><%= @user.errors.full_messages_for(:name).first %></div></b><br>
            </div>

            <div>
                <%= form.label :mobile, :class => 'user_sign_up_label' %>
                <%= form.text_field :mobile, :class => 'user_sign_up_field' %>
             </div>
             
                <b><div class = 'sign_up_error' > <%= @user.errors.full_messages_for(:mobile).first %> </div></b>
                
            <div>
                <%= form.label :interests, :class => 'checkbox_label' %>

                    <div class='check_box_sign_up1'>
                        <%= check_box_tag 'user[category][]', 'Beauty' %><%= 'Beauty' %>
                        <%= check_box_tag 'user[category][]', 'Medicines' %><%= 'Medicines' %>
                        <%= check_box_tag 'user[category][]', 'Electronic' %><%= 'Electronic' %>
                    </div>
            
                    <div class='check_box_sign_up2'>
                        <%= check_box_tag 'user[category][]', 'Sports' %><%= 'Sports' %>
                        <%= check_box_tag 'user[category][]', 'Grocery' %><%= 'Grocery' %>
                        <%= check_box_tag 'user[category][]', 'Fashion' %><%= 'Fashion' %>
                    </div>

                <b><div class = 'sign_up_error' ><%= @user.errors.full_messages_for(:category).first %></div></b><br>
            </div>

            <div>
                <%= form.label :email, :class => 'user_sign_up_label' %>
                <%= form.email_field :email, :class => 'user_sign_up_field' %>
                <b><div class = 'sign_up_error' ><%= @user.errors.full_messages_for(:email).first %></div></b><br>
            </div>

            <div>
                <%= form.label :password, :class => 'user_sign_up_label' %>
                <%= form.password_field :password, :class => 'user_sign_up_field' %>
                <b><div class = 'sign_up_error' ><%= @user.errors.full_messages_for(:password).first %></div></b><br>
            </div>

            <div>
                <%= form.label :confirm_password, :class => 'user_sign_up_label' %>
                <%= form.password_field :password_confirmation, :class => 'user_sign_up_field' %>
                <b><div class = 'sign_up_error' ><%= @user.errors.full_messages_for(:password_confirmation).first %></div></b><br>
            </div>

            <p id='sign'>Already a member? <%= link_to "Sign in", sessions_sign_in_path %><br></p>

            <%= form.submit %>

        </div>

    <%end%>

</div>