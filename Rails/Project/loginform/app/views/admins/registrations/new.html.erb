<h1>Sign up</h1>

<div class='admin_sign_up_form'>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>

      <div>
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
        <%= resource.errors.full_messages_for(:name).first %>
      </div>

      <div>
        <%= f.label :mobile %><br />
        <%= f.text_field :mobile %>
        <%= resource.errors.full_messages_for(:mobile).first %>
      </div>
      
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
        <%= resource.errors.full_messages_for(:email).first %>
      </div>

      <div>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= resource.errors.full_messages_for(:password).first %>
      </div>

      <div>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <%= resource.errors.full_messages_for(:password_confirmation).first %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <p class='admin_devise_links'><%= render "admins/shared/links" %></p>
</div>