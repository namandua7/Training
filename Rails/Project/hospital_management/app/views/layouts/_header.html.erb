<div class = "header" >
    <ul class = "header_unordered_list" >

        <li><%= link_to "Home", root_path, class: "header_lists" %></li>
        <li><%= link_to "List of Doctors and Patients", appointments_show_path, class: "header_lists" %></li>

        <% if patient_signed_in? || doctor_signed_in? %>
            <li><%= link_to "Appointments", appointments_path, class: "header_lists" %>
        <% end %>

        <% if !(doctor_signed_in?) && !(patient_signed_in?) %>
            <li class = "patient_doctor_login_link"><%= link_to "Patient login", new_patient_session_path, class: "header_lists" %></li>
            <li class = "patient_doctor_login_link"><%= link_to "Doctor login", new_doctor_session_path, class: "header_lists" %></li>
        <% end %>
        
        <% if patient_signed_in? %>
            <li class = "patient_doctor_login_link"><%= link_to "Log out", destroy_patient_session_path, data: {turbo_method: :delete}, class: "header_lists" %></li>
        <% end %>

        <% if doctor_signed_in? %>
        <li class = "patient_doctor_login_link"><%= link_to "Log out", destroy_doctor_session_path, data: {turbo_method: :delete}, class: "header_lists" %></li>
        <% end %>

    </ul>
</div>