<p>Admin Sign up</p>

<div class='admin_sign_up_form'>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>

      <div class='admin_sign_up_label_and_field'>
        <%= f.label :name, class: 'admin_sign_up_form_label' %>
        <%= f.text_field :name,placeholder: "Name", autofocus: true, class: 'admin_sign_up_form_field' %>
        <b><div class = 'admin_sign_up_error' ><%= resource.errors.full_messages_for(:name).first %></div></b>
      </div>

      <div class='admin_sign_up_label_and_field'>
        <%= f.label :mobile, class: 'admin_sign_up_form_label' %>
        <%= f.text_field :mobile, placeholder: "Mobile", class: 'admin_sign_up_form_field' %>
        <b><div class = 'admin_sign_up_error' ><%= resource.errors.full_messages_for(:mobile).first %></div></b>
      </div>
      
      <div class='admin_sign_up_label_and_field'>
        <%= f.label :email, class: 'admin_sign_up_form_label' %>
        <%= f.email_field :email,placeholder: "Email", class: 'admin_sign_up_form_field' %>
        <b><div class = 'admin_sign_up_error' ><%= resource.errors.full_messages_for(:email).first %></div></b>
      </div>

      <div class='admin_sign_up_label_and_field'>
        <%= f.label :password, class: 'admin_sign_up_form_label' %>
        <%= f.password_field :password,placeholder: "Password", class: 'admin_sign_up_form_field' %>
        <b><div class = 'admin_sign_up_error' ><%= resource.errors.full_messages_for(:password).first %></div></b>
      </div>

      <div class='admin_sign_up_label_and_field'>
        <div class='user_sign_up_confirm_password_div'>
        <%= f.label :password_confirmation, class: 'admin_sign_up_form_label' %>
        </div>
        <%= f.password_field :password_confirmation,placeholder: "Confirm password", class: 'admin_sign_up_form_field' %>
        <b><div class = 'admin_sign_up_error' ><%= resource.errors.full_messages_for(:password_confirmation).first %></div></b>
      </div>

      <br>
      
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      
    <% end %>

    <p class='admin_devise_links'><%= render "admins/shared/links" %></p>
</div>