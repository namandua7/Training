<div>
       
    <ul class='header'>

    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'All products', products_path %></li>

    <% if admin_signed_in? %>

        <li><%= link_to 'Add Product', new_product_path %></li>
        <li class= 'header_log_out_button'><%= link_to 'Log out admin', destroy_admin_session_path, data: {turbo_method: :delete} %>

    <% end %>

    <li><%= render 'layouts/search' %></li>
    
    <% if session[:user_id] %>

        <li class='header_log_out_button'><%= link_to "Log out user", sessions_sign_out_path, data: {turbo_method: :delete} %> </li>
        
    <% end %>

    <% if !(admin_signed_in?) && !(session[:user_id]) %>

        <li class='header_log_out_button'><%= link_to "Admin sign in", new_admin_session_path %></li>
        <li class='header_log_out_button'><%= link_to "User sign in", sessions_sign_in_path %></li>
    
    <% end %>
  
    </ul>

</div>