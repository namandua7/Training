<div class="form-wrapper">
  <%= form_with(model: [@blog, @comment], url: blog_comments_path(@blog)) do |f| %>
    <div class="form-field">
      <%= f.hidden_field :parent_id %>
      <%= f.text_field :content, placeholder: "Add a comment" %>
    </div>
    <div class="form-field">
      <%= f.submit "Post" %>
    </div>
  <% end %>
</div>