<center><h1>Create Blog</h1></center>

<%= form_with model: @blog, html: { class: 'blog-form' } do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter Title' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Enter Description' %>
  </div>

  <%= form.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
