<div class="blog-content">
<% if @blog.image.present? %>
    <div class="blog-image">
    <%= image_tag @blog.image.url, alt: @blog.title %>
    </div>
    <div class="blog-text">
    <h1><%= @blog.title %></h1>
    <p><%= @blog.description %></p>
    </div>
<% else %>
    <div class="blog-full">
    <h1><%= @blog.title %></h1>
    <p><%= @blog.description %></p>
    </div>
<% end %>
</div>